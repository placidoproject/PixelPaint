<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#011"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configurations"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Preview"
        android:id="@+id/switch_preview"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Grid"
        android:id="@+id/switch_grid"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/switch_preview"
        android:layout_alignRight="@+id/switch_preview"
        android:layout_alignEnd="@+id/switch_preview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/config_ok"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/config_cancel"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/config_ok"
        android:layout_toEndOf="@+id/config_ok" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Toggle Mirrored Draw"
        android:id="@+id/textView"
        android:layout_below="@+id/switch_grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horizontal"
        android:id="@+id/switch_mirror_h"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertical"
        android:id="@+id/switch_mirror_v"
        android:layout_below="@+id/switch_mirror_h"
        android:layout_alignRight="@+id/switch_mirror_h"
        android:layout_alignEnd="@+id/switch_mirror_h" />


</RelativeLayout>
